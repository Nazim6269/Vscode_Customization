{
  // Editor Settings
  "editor.fontSize": 24,
  "editor.fontFamily": "Fira Code, monospace",
  "editor.fontLigatures": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // Cursor Settings
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",

  // Formatting Settings
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma",
    "editor.formatOnSave": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "source.fixAll.tslint": "always",
    "source.removeUnusedImports": "always", //this line delete unused variables
    "source.organizeImports": "always"
  },

  // ESLint Settings
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.options": {
    "configFile": "./.eslintrc.json",
    "eslint.alwaysShowStatus": true
  },
  "eslint.codeActionsOnSave.rules": null,
  "eslint.format.enable": true,

  // Terminal Settings
  "terminal.integrated.fontSize": 22,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontFamily": "Fira Code, monospace",
  "terminal.integrated.profiles.windows": {
    "Git Bash": {
      "path": "C:\\Program Files\\Git\\bin\\bash.exe"
    }
  },
  "terminal.integrated.defaultProfile.windows": "Git Bash",

  // UI Customizations
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    "terminalCursor.background": "#84a6a8",
    "terminalCursor.foreground": "#0ad3f1",
    "terminal.ansiGreen": "#e20ee9",
    "terminal.ansiMagenta": "#210be4",
    "terminal.ansiYellow": "#3bf4fa",
    "editor.selectionBackground": "#ae9c9c"
  },
  "editor.guides.bracketPairsHorizontal": true,
  "editor.autoClosingBrackets": "always",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.bracketPairs": true,
  "editor.fontVariations": false,

  // Disable TypeScript Warnings
  "typescript.suggest.autoImports": false,
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  "typescript.validate.enable": false,
  "javascript.validate.enable": false,

  // Miscellaneous
  "files.autoSave": "onFocusChange",
  "window.zoomLevel": 0.5,
  "editor.fontWeight": "normal",
  "workbench.colorTheme": "Learn with Sumit - Peace of the eye",
  "workbench.sideBar.location": "right",
  "json.schemas": [],
  "editor.codeActions.triggerOnFocusChange": true,
  "workbench.settings.applyToAllProfiles": []
}
